@page
@model ForgotPasswordModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["ForgotPasswordTitle"];
    Layout = "/Areas/Identity/Pages/_AuthLayout.cshtml";
}

<div class="login-modal">
    <button type="button" class="close-btn" onclick="window.location='/'">&times;</button>

    <h1 class="login-title">@Localizer["ForgotPasswordTitle"]</h1>
    <h2 class="text-center mb-4">@Localizer["ForgotPasswordSubtitle"]</h2>

    <form method="post" class="login-form">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Input.Email">@Localizer["EmailLabel"]</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-login">@Localizer["ResetPasswordButton"]</button>
    </form>
</div>

<div class="post-modal-footer">
    @Localizer["RememberedPassword"]
    <a asp-page="./Login" class="btn-register">@Localizer["LoginButton"]</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
