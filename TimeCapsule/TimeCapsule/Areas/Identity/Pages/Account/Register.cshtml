@page
@model RegisterModel
@{
    ViewData["Title"] = "Rejestracja";
    Layout = "/Areas/Identity/Pages/_AuthLayout.cshtml";
}

<div class="login-modal">
    <button type="button" class="close-btn" onclick="window.location='/'">&times;</button>

    <h1 class="login-title">@ViewData["Title"]</h1>

    <form id="registerForm" method="post" class="login-form">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder="e-mail*" />
            <label asp-for="Input.Email">e-mail*</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" placeholder="hasło*" />
            <label asp-for="Input.Password">hasło*</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" placeholder="powtórz hasło*" />
            <label asp-for="Input.ConfirmPassword">powtórz hasło*</label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-login">Dalej</button>
    </form>
</div>

<span class="required-note">* pole wymagane</span>
<div class="post-modal-footer">
    Posiadasz konto?
    <a asp-page="./Login" class="btn-register">Zaloguj się</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
