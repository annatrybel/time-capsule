@using TimeCapsule.Models.Dto
@model CreateCapsuleDto

@section Styles {
    <link rel="stylesheet" href="~/css/steps.css" asp-append-version="true" />
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <style>
        body {
            background: none !important;
            background-color: #E4E4E4 !important;
        }
    </style>
}

@{
    bool hasDate = Model != null && Model.OpeningDate != default && Model.OpeningDate != DateTime.MinValue;

    DateTime now = DateTime.UtcNow;
    DateTime oneMonthLater = now.AddMonths(1);
    DateTime sixMonthsLater = now.AddMonths(6);
    DateTime oneYearLater = now.AddYears(1);
    DateTime threeYearsLater = now.AddYears(3);
    DateTime fiveYearsLater = now.AddYears(5);
    DateTime eightYearsLater = now.AddYears(8);

    bool isOneMonth = hasDate && Math.Abs((Model.OpeningDate - oneMonthLater).TotalDays) < 5;
    bool isSixMonths = hasDate && Math.Abs((Model.OpeningDate - sixMonthsLater).TotalDays) < 10;
    bool isOneYear = hasDate && Math.Abs((Model.OpeningDate - oneYearLater).TotalDays) < 15;
    bool isThreeYears = hasDate && Math.Abs((Model.OpeningDate - threeYearsLater).TotalDays) < 30;
    bool isFiveYears = hasDate && Math.Abs((Model.OpeningDate - fiveYearsLater).TotalDays) < 30;
    bool isEightYears = hasDate && Math.Abs((Model.OpeningDate - eightYearsLater).TotalDays) < 30;

    string dateValue = hasDate ? Model.OpeningDate.ToString("yyyy-MM-dd") : string.Empty;
    string timeValue = hasDate ? Model.OpeningDate.ToString("HH:mm") : "12:00";
}

<div class="background-image-for-pages">
    <div class="container-fluid p-0">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10 bg-light rounded shadow-sm p-4 my-5">
                <form asp-controller="TimeCapsule" asp-action="SaveStep7" method="post" id="dateForm">
                    <input type="hidden" name="PredefinedPeriod" id="PredefinedPeriod" />

                    <div class="text-center">
                        <h1 class="display-6 mb-3">Krok 7 z 9: ustaw datę otwarcia</h1>
                        <div class="step-indicator">
                            <span class="step-progress active"></span>
                            <span class="step-progress active"></span>
                            <span class="step-progress active"></span>
                            <span class="step-progress active"></span>
                            <span class="step-progress active"></span>
                            <span class="step-progress active"></span>
                            <span class="step-progress active"></span>
                            <span class="step-progress"></span>
                            <span class="step-progress"></span>
                        </div>
                        <p class="lead mb-3">
                            Wybierz datę otwarcia kapsuły:
                        </p>

                        @if (hasDate)
                        {
                            <div class="alert alert-info mb-4">
                                Wybrana data otwarcia: <strong>@Model.OpeningDate.ToString("dd/MM/yyyy HH:mm")</strong>
                            </div>
                        }
                    </div>

                    <!-- Pastylki -->
                    <div class="mb-4">
                        <h5>Za równo:</h5>
                        <div class="row mb-3">
                            <div class="col-md-4 mb-2">
                                <button type="button" class="btn @(isOneMonth ? "btn-secondary" : "btn-outline-secondary") w-100 predefined-btn" data-value="1m">
                                    1 miesiąc @(isOneMonth ? "✓" : "")
                                </button>
                            </div>
                            <div class="col-md-4 mb-2">
                                <button type="button" class="btn @(isSixMonths ? "btn-secondary" : "btn-outline-secondary") w-100 predefined-btn" data-value="6m">
                                    6 miesięcy @(isSixMonths ? "✓" : "")
                                </button>
                            </div>
                            <div class="col-md-4 mb-2">
                                <button type="button" class="btn @(isOneYear ? "btn-secondary" : "btn-outline-secondary") w-100 predefined-btn" data-value="1y">
                                    1 rok @(isOneYear ? "✓" : "")
                                </button>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-2">
                                <button type="button" class="btn @(isThreeYears ? "btn-secondary" : "btn-outline-secondary") w-100 predefined-btn" data-value="3y">
                                    3 lata @(isThreeYears ? "✓" : "")
                                </button>
                            </div>
                            <div class="col-md-4 mb-2">
                                <button type="button" class="btn @(isFiveYears ? "btn-secondary" : "btn-outline-secondary") w-100 predefined-btn" data-value="5y">
                                    5 lat @(isFiveYears ? "✓" : "")
                                </button>
                            </div>
                            <div class="col-md-4 mb-2">
                                <button type="button" class="btn @(isEightYears ? "btn-secondary" : "btn-outline-secondary") w-100 predefined-btn" data-value="8y">
                                    8 lat @(isEightYears ? "✓" : "")
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Data ręczna -->
                    <div class="mb-4">
                        <h5>Lub o dowolnie wybranej dacie i godzinie:</h5>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="input-group">
                                    <input type="date" class="form-control" id="openDate" name="OpenDate"
                                           min="@DateTime.Today.ToString("yyyy-MM-dd")"
                                           value="@dateValue"
                                           aria-label="Data otwarcia">
                                    <span class="input-group-text">
                                        <i class="bi bi-calendar3"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="input-group">
                                    <input type="time" class="form-control" id="openTime" name="OpenTime"
                                           value="@timeValue" aria-label="Godzina otwarcia">
                                    <span class="input-group-text">
                                        <i class="bi bi-clock"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Nawigacja -->
                    <div class="d-flex justify-content-between mt-5">
                        <a asp-controller="TimeCapsule" asp-action="Step6" class="btn btn-secondary">Wstecz</a>
                        <button type="submit" class="btn btn-success">Dalej</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.predefined-btn').forEach(button => {
            button.addEventListener('click', () => {
                // Ustaw wartość ukrytą
                document.getElementById('PredefinedPeriod').value = button.dataset.value;

                // Stylowanie aktywnego przycisku
                document.querySelectorAll('.predefined-btn').forEach(b => {
                    b.classList.remove('btn-secondary');
                    b.classList.add('btn-outline-secondary');
                });
                button.classList.remove('btn-outline-secondary');
                button.classList.add('btn-secondary');
            });
        });
    </script>
}
