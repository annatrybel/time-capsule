@using TimeCapsule.Models.Dto
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model CreateCapsuleDto

@{
    bool hasDate = Model != null && Model.OpeningDate != default && Model.OpeningDate != DateTime.MinValue;

    DateTime now = DateTime.UtcNow;
    DateTime oneMonthLater = now.AddMonths(1);
    DateTime sixMonthsLater = now.AddMonths(6);
    DateTime oneYearLater = now.AddYears(1);
    DateTime threeYearsLater = now.AddYears(3);
    DateTime fiveYearsLater = now.AddYears(5);
    DateTime eightYearsLater = now.AddYears(8);

    bool isOneMonth = hasDate && Math.Abs((Model.OpeningDate - oneMonthLater).TotalDays) < 5;
    bool isSixMonths = hasDate && Math.Abs((Model.OpeningDate - sixMonthsLater).TotalDays) < 10;
    bool isOneYear = hasDate && Math.Abs((Model.OpeningDate - oneYearLater).TotalDays) < 15;
    bool isThreeYears = hasDate && Math.Abs((Model.OpeningDate - threeYearsLater).TotalDays) < 30;
    bool isFiveYears = hasDate && Math.Abs((Model.OpeningDate - fiveYearsLater).TotalDays) < 30;
    bool isEightYears = hasDate && Math.Abs((Model.OpeningDate - eightYearsLater).TotalDays) < 30;

    string dateValue = hasDate ? Model.OpeningDate.ToString("yyyy-MM-dd") : string.Empty;
    string timeValue = hasDate ? Model.OpeningDate.ToString("HH:mm") : "12:00";
}

<div class="background-image-for-pages">
    <div class="container-fluid p-0">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10 bg-light rounded shadow-sm p-4 my-5">
                <div class="text-center">
                    <h1 class="display-6 mb-3">@Localizer["StepTitle"]</h1>
                    <p class="lead mb-3">
                        @Localizer["StepDescription"]
                    </p>

                    @if (hasDate)
                    {
                        <div class="alert alert-info mb-4">
                            @Localizer["SelectedDate"]: <strong>@Model.OpeningDate.ToString("dd/MM/yyyy HH:mm")</strong>
                        </div>
                    }
                </div>

                <!-- Pierwszy sposób: predefiniowane okresy -->
                <div class="mb-4">
                    <h5>@Localizer["PredefinedPeriods"]:</h5>
                    <div class="row mb-3">
                        <div class="col-md-4 mb-2">
                            <form asp-controller="TimeCapsule" asp-action="SaveStep7" method="post">
                                <input type="hidden" name="PredefinedPeriod" value="1m" />
                                <button type="submit" class="btn @(isOneMonth ? "btn-secondary" : "btn-outline-secondary") w-100">
                                    @Localizer["OneMonth"] @(isOneMonth ? "✓" : "")
                                </button>
                            </form>
                        </div>
                        <div class="col-md-4 mb-2">
                            <form asp-controller="TimeCapsule" asp-action="SaveStep7" method="post">
                                <input type="hidden" name="PredefinedPeriod" value="6m" />
                                <button type="submit" class="btn @(isSixMonths ? "btn-secondary" : "btn-outline-secondary") w-100">
                                    @Localizer["SixMonths"] @(isSixMonths ? "✓" : "")
                                </button>
                            </form>
                        </div>
                        <div class="col-md-4 mb-2">
                            <form asp-controller="TimeCapsule" asp-action="SaveStep7" method="post">
                                <input type="hidden" name="PredefinedPeriod" value="1y" />
                                <button type="submit" class="btn @(isOneYear ? "btn-secondary" : "btn-outline-secondary") w-100">
                                    @Localizer["OneYear"] @(isOneYear ? "✓" : "")
                                </button>
                            </form>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-2">
                            <form asp-controller="TimeCapsule" asp-action="SaveStep7" method="post">
                                <input type="hidden" name="PredefinedPeriod" value="3y" />
                                <button type="submit" class="btn @(isThreeYears ? "btn-secondary" : "btn-outline-secondary") w-100">
                                    @Localizer["ThreeYears"] @(isThreeYears ? "✓" : "")
                                </button>
                            </form>
                        </div>
                        <div class="col-md-4 mb-2">
                            <form asp-controller="TimeCapsule" asp-action="SaveStep7" method="post">
                                <input type="hidden" name="PredefinedPeriod" value="5y" />
                                <button type="submit" class="btn @(isFiveYears ? "btn-secondary" : "btn-outline-secondary") w-100">
                                    @Localizer["FiveYears"] @(isFiveYears ? "✓" : "")
                                </button>
                            </form>
                        </div>
                        <div class="col-md-4 mb-2">
                            <form asp-controller="TimeCapsule" asp-action="SaveStep7" method="post">
                                <input type="hidden" name="PredefinedPeriod" value="8y" />
                                <button type="submit" class="btn @(isEightYears ? "btn-secondary" : "btn-outline-secondary") w-100">
                                    @Localizer["EightYears"] @(isEightYears ? "✓" : "")
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Drugi sposób: konkretna data i czas -->
                <div class="mb-4">
                    <h5>@Localizer["CustomDateTime"]:</h5>
                    <form asp-controller="TimeCapsule" asp-action="SaveStep7" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="input-group">
                                    <input type="date" class="form-control" id="openDate" name="OpenDate"
                                           min="@DateTime.Today.ToString("yyyy-MM-dd")"
                                           value="@dateValue"
                                           aria-label="@Localizer["OpeningDate"]">
                                    <span class="input-group-text">
                                        <i class="bi bi-calendar3"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="input-group">
                                    <input type="time" class="form-control" id="openTime" name="OpenTime"
                                           value="@timeValue" aria-label="@Localizer["OpeningTime"]">
                                    <span class="input-group-text">
                                        <i class="bi bi-clock"></i>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-5">
                            <a asp-controller="TimeCapsule" asp-action="Step6" class="btn btn-secondary">@Localizer["Back"]</a>
                            <button type="submit" class="btn btn-success">@Localizer["Next"]</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>