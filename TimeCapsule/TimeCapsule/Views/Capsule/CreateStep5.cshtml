@using TimeCapsule.Models.Dto
@model CreateCapsuleDto

@section Styles {
    <link rel="stylesheet" href="~/css/steps.css" asp-append-version="true" />
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <style>
        body {
            background: none !important;
            background-color: #E4E4E4 !important;
        }

        .ql-toolbar.ql-snow {
            border-radius: 0.25rem 0.25rem 0 0;
        }

        .ql-container.ql-snow {
            border-radius: 0 0 0.25rem 0.25rem;
        }
    </style>
}

<div class="background-image-for-pages">
    <div class="container-fluid p-0">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10 bg-light rounded shadow-sm p-4 my-5">
                <form asp-controller="TimeCapsule" asp-action="SaveStep5" method="post">
                    <div class="text-center">
                        <h1 class="display-6 mb-3">Krok 5 z 9: Napisz list</h1>
                        <div class="step-indicator">
                            <span class="step-progress active"></span>
                            <span class="step-progress active"></span>
                            <span class="step-progress active"></span>
                            <span class="step-progress active"></span>
                            <span class="step-progress active"></span>
                            <span class="step-progress"></span>
                            <span class="step-progress"></span>
                            <span class="step-progress"></span>
                            <span class="step-progress"></span>
                        </div>
                        <p class="lead mb-3">
                            To miejsce, gdzie możesz przelać swoje myśli, emocje i marzenia.
                            Napisz do siebie lub do kogoś bliskiego - opowiedz o swoim życiu,
                            swoich planach, nadziejach i tym, co jest teraz dla Ciebie ważne.
                            Może chcesz zostawić radę dla przyszłego siebie lub podzielić się
                            historią, którą warto zapamiętać?
                        </p>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MessageContent" class="form-label text-center w-100">Treść listu:</label>
                        <input type="hidden" name="MessageContent" id="MessageContent" value="@Model?.MessageContent" />
                        <div id="message-editor"></div>
                    </div>

                    <div class="d-flex justify-content-between mt-5">
                        <a asp-controller="TimeCapsule" asp-action="Step4" class="btn btn-cancel">Wstecz</a>
                        <button type="submit" class="btn btn-save">Dalej</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>
    <script>
        var messageQuill = new Quill('#message-editor', {
            theme: 'snow',
            placeholder: 'Wpisz swój list...',
            modules: {
                toolbar: [
                    [{ 'font': [] }],
                    [{ 'size': ['small', false, 'large', 'huge'] }],
                    ['bold', 'italic', 'underline'],
                    [{ 'color': [] }],
                    [{ 'list': 'ordered' }, { 'list': 'bullet' }]
                ]
            }
        });

        document.querySelector('form').onsubmit = function () {
            document.querySelector('#MessageContent').value = messageQuill.root.innerHTML;
        };

        var messageInitial = document.querySelector('#MessageContent').value;
        if (messageInitial) {
            messageQuill.root.innerHTML = messageInitial;
        }
    </script>
}
