@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@using TimeCapsule.Models.Dto
@model CreateCapsuleDto

@section Styles {
    <link rel="stylesheet" href="~/css/steps.css" asp-append-version="true" />
    <style>
        body {
            background: none !important;
            background-color: #E4E4E4 !important;
        }
    </style>
}
<div class="background-image-for-pages">
    <div class="container-fluid p-0">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10 bg-light rounded shadow-sm p-4 my-5">
                <form asp-controller="TimeCapsule" asp-action="SaveStep2" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="text-center">
                        <h1 class="display-6 mb-3"> @Localizer["StepTitle"]</h1>
                        <div class="step-indicator">
                            <span class="step-progress active"></span>
                            <span class="step-progress active"></span>
                            <span class="step-progress"></span>
                            <span class="step-progress"></span>
                            <span class="step-progress"></span>
                            <span class="step-progress"></span>
                            <span class="step-progress"></span>
                            <span class="step-progress"></span>
                            <span class="step-progress"></span>
                        </div>
                        <p class="lead mb-3">
                            @Localizer["StepDescription"]
                        </p>
                    </div>

                    <!-- Pole na tytuł -->
                    <div class="mb-4">
                        <label asp-for="Title" class="form-label">@Localizer["CapsuleTitle"] <span class="text-danger">*</span></label>
                        <input asp-for="Title" type="text" class="form-control" name="Title" placeholder="Moja kapsuła czasu" required>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <!-- Sekcja wyboru ikony -->
                    <div class="mb-4">
                        <label class="form-label">@Localizer["ChooseIcon"]</label>

                        <!-- Rząd 1 ikon -->
                        <div class="row mb-2">
                            <div class="col-3 text-center">
                                <input type="radio" class="btn-check" name="Icon" id="icon-floppy" value="bi-floppy" @(Model.Icon == "bi-floppy" || Model.Icon == null ? "checked" : "")>
                                <label for="icon-floppy" class="btn border p-3 w-100 icon-btn">
                                    <i class="bi bi-floppy"></i>
                                </label>
                            </div>
                            <div class="col-3 text-center">
                                <input type="radio" class="btn-check" name="Icon" id="icon-gift" value="bi-gift" @(Model.Icon == "bi-gift" ? "checked" : "")>
                                <label for="icon-gift" class="btn border p-3 w-100 icon-btn">
                                    <i class="bi bi-gift"></i>
                                </label>
                            </div>
                            <div class="col-3 text-center">
                                <input type="radio" class="btn-check" name="Icon" id="icon-house" value="bi-house" @(Model.Icon == "bi-house" ? "checked" : "")>
                                <label for="icon-house" class="btn border p-3 w-100 icon-btn">
                                    <i class="bi bi-house"></i>
                                </label>
                            </div>
                            <div class="col-3 text-center">
                                <input type="radio" class="btn-check" name="Icon" id="icon-cake2" value="bi-cake2" @(Model.Icon == "bi-cake2" ? "checked" : "")>
                                <label for="icon-cake2" class="btn border p-3 w-100 icon-btn">
                                    <i class="bi bi-cake2"></i>
                                </label>
                            </div>
                        </div>

                        <!-- Rząd 2 ikon -->
                        <div class="row mb-2">
                            <div class="col-3 text-center">
                                <input type="radio" class="btn-check" name="Icon" id="icon-balloon" value="bi-cloud" @(Model.Icon == "bi-cloud" ? "checked" : "")>
                                <label for="icon-balloon" class="btn border p-3 w-100 icon-btn">
                                    <i class="bi bi-cloud"></i>
                                </label>
                            </div>
                            <div class="col-3 text-center">
                                <input type="radio" class="btn-check" name="Icon" id="icon-stars" value="bi-stars" @(Model.Icon == "bi-stars" ? "checked" : "")>
                                <label for="icon-stars" class="btn border p-3 w-100 icon-btn">
                                    <i class="bi bi-stars"></i>
                                </label>
                            </div>
                            <div class="col-3 text-center">
                                <input type="radio" class="btn-check" name="Icon" id="icon-hourglass-split" value="bi-hourglass-split" @(Model.Icon == "bi-hourglass-split" ? "checked" : "")>
                                <label for="icon-hourglass-split" class="btn border p-3 w-100 icon-btn">
                                    <i class="bi bi-hourglass-split"></i>
                                </label>
                            </div>
                            <div class="col-3 text-center">
                                <input type="radio" class="btn-check" name="Icon" id="icon-feather" value="bi-feather" @(Model.Icon == "bi-feather" ? "checked" : "")>
                                <label for="icon-feather" class="btn border p-3 w-100 icon-btn">
                                    <i class="bi bi-feather"></i>
                                </label>
                            </div>
                        </div>

                        <!-- Rząd 3 ikon -->
                        <div class="row mb-2">
                            <div class="col-3 text-center">
                                <input type="radio" class="btn-check" name="Icon" id="icon-chat-square-heart" value="bi-chat-square-heart" @(Model.Icon == "bi-chat-square-heart" ? "checked" : "")>
                                <label for="icon-chat-square-heart" class="btn border p-3 w-100 icon-btn">
                                    <i class="bi bi-chat-square-heart"></i>
                                </label>
                            </div>
                            <div class="col-3 text-center">
                                <input type="radio" class="btn-check" name="Icon" id="icon-heart" value="bi-heart" @(Model.Icon == "bi-heart" ? "checked" : "")>
                                <label for="icon-heart" class="btn border p-3 w-100 icon-btn">
                                    <i class="bi bi-heart"></i>
                                </label>
                            </div>
                            <div class="col-3 text-center">
                                <input type="radio" class="btn-check" name="Icon" id="icon-archive" value="bi-archive" @(Model.Icon == "bi-archive" ? "checked" : "")>
                                <label for="icon-archive" class="btn border p-3 w-100 icon-btn">
                                    <i class="bi bi-archive"></i>
                                </label>
                            </div>
                            <div class="col-3 text-center">
                                <input type="radio" class="btn-check" name="Icon" id="icon-gem" value="bi-gem" @(Model.Icon == "bi-gem" ? "checked" : "")>
                                <label for="icon-gem" class="btn border p-3 w-100 icon-btn">
                                    <i class="bi bi-gem"></i>
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Sekcja wyboru koloru -->
                    <div class="mb-4">
                        <label class="form-label">@Localizer["ChooseColor"]</label>

                        <!-- Rząd 1 kolorów -->
                        <div class="row mb-2">
                            @foreach (var color in new[] { "#D29F80", "#EACE84", "#BAB9E1", "#D9A1C0", "#CBDCEB", "#8EACCD" })
                            {
                                <div class="col-2 text-center">
                                    <input type="radio" class="btn-check" name="Color" id="color-@(color.Substring(1))" value="@color"
                                           @(Model?.Color == color || (Model?.Color == null && color == "#D29F80") ? "checked" : "")>
                                    <label for="color-@(color.Substring(1))"
                                           class="btn p-4 rounded w-100 border border-secondary color-btn @(Model?.Color == color || (Model?.Color == null && color == "#D29F80") ? "selected-color" : "")"
                                           style="background-color: @color;">
                                    </label>
                                </div>
                            }
                        </div>

                        <!-- Rząd 2 kolorów -->
                        <div class="row">
                            @foreach (var color in new[] { "#B0C5A4", "#DDE4BE", "#FFF5CD", "#E7CCCC", "#EFB7A7", "#DE8F5F" })
                            {
                                <div class="col-2 text-center mb-2">
                                    <input type="radio" class="btn-check" name="Color" id="color-@(color.Substring(1))" value="@color"
                                           @(Model?.Color == color ? "checked" : "")>
                                    <label for="color-@(color.Substring(1))"
                                           class="btn p-4 rounded w-100 border border-secondary color-btn @(Model?.Color == color ? "selected-color" : "")"
                                           style="background-color: @color;">
                                    </label>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-5">
                        <a asp-controller="TimeCapsule" asp-action="Step1" class="btn btn-cancel">@Localizer["Back"]</a>
                        <button type="submit" class="btn btn-save">@Localizer["Next"]</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Obsługa kliknięcia na kolor
            $('.color-btn').click(function() {
                $('.color-btn').removeClass('selected-color');
                $(this).addClass('selected-color');
            });

            // Obsługa kliknięcia na ikonę
            $('.icon-btn').click(function() {
                $('.icon-btn').removeClass('active');
                $(this).addClass('active');
            });

            // Zaznaczenie aktualnie wybranych elementów przy ładowaniu strony
            $('input[name="Color"]:checked').next('.color-btn').addClass('selected-color');
            $('input[name="Icon"]:checked').next('.icon-btn').addClass('active');
        });
    </script>
}

