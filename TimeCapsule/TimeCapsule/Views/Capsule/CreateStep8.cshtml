@using TimeCapsule.Models.Dto
@model CreateCapsuleDto
@section Styles {
    <link rel="stylesheet" href="~/css/steps.css" asp-append-version="true" />
    <style>
        body {
            background: none !important;
            background-color: #E4E4E4 !important;
            color: #4C5C71;
        }

    </style>
}

<div class="background-image-for-pages">
    <div class="container-fluid p-0">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10 bg-light rounded shadow-sm p-4 my-5">
                <form asp-controller="TimeCapsule" asp-action="SaveStep8" method="post">
                    <div class="text-center">
                        <h1 class="display-6 mb-3">Krok 8 z 9: Podsumowanie</h1>
                        <div class="step-indicator">
                            <span class="step-progress active"></span>
                            <span class="step-progress active"></span>
                            <span class="step-progress active"></span>
                            <span class="step-progress active"></span>
                            <span class="step-progress active"></span>
                            <span class="step-progress active"></span>
                            <span class="step-progress active"></span>
                            <span class="step-progress active"></span>
                            <span class="step-progress"></span>
                        </div>
                        <p class="lead mb-3">
                            Upewnij się, że zawartość kapsuły jest poprawna.
                            Na tym etapie możesz cofnąć się do poprzednich kroków i edytować wypełnione pola.
                        </p>
                    </div>

                    <!-- Tytuł -->
                    <div class="mb-4">
                        <label asp-for="Title" class="form-label text-center w-100">Tytuł</label>
                        <input asp-for="Title" type="text" class="form-control" name="Title" placeholder="Moja kapsuła czasu" required>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <!-- Ikona i kolor w jednym rzędzie -->
                    <div class="card mb-4">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Wygląd</h5>
                            <a asp-controller="TimeCapsule" asp-action="Step2" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-pencil"></i> Edytuj
                            </a>
                        </div>
                        <div class="card-body">
                            <div class="row align-items-center justify-content-center">
                                <div class="col-md-6 text-center">
                                    <div class="p-3">
                                        <span>Ikona:</span>
                                        <div class="my-3">
                                            <i class="bi @Model.Icon" style="font-size: 4rem;"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 text-center">
                                    <div class="p-3">
                                        <span>Kolor:</span>
                                        <div class="my-3">
                                            <div class="p-4 rounded mx-auto" style="background-color: @Model.Color; width: 100px; height: 100px;"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Wstęp -->
                    <div class="mb-3">
                        <label asp-for="Introduction" class="form-label text-center w-100">Wstęp</label>
                        <textarea asp-for="Introduction" class="summernote">@Model?.Introduction</textarea>
                        <span asp-validation-for="Introduction" class="text-danger"></span>
                    </div>

                    <!-- Odpowiedzi na pytania -->
                    @if (Model.Answers != null && Model.Answers.Any())
                    {
                        <div class="accordion mb-4" id="questionsAccordion">
                            @if (Model.CapsuleSections != null && Model.CapsuleSections.Any())
                            {
                                var isFirstSection = true;
                                var answerIndex = 0;

                                @foreach (var sectionItem in Model.CapsuleSections.OrderBy(s => s.DisplayOrder))
                                {
                                    <div class="accordion-item">
                                        <h2 class="accordion-header" id="heading-@sectionItem.Id">
                                            <button class="accordion-button bg-secondary text-white @(isFirstSection ? "" : "collapsed")" type="button"
                                                    data-bs-toggle="collapse" data-bs-target="#collapse-@sectionItem.Id"
                                                    aria-expanded="@(isFirstSection ? "true" : "false")"
                                                    aria-controls="collapse-@sectionItem.Id">
                                                <strong>@sectionItem.Name</strong>
                                            </button>
                                        </h2>
                                        <div id="collapse-@sectionItem.Id" class="accordion-collapse collapse @(isFirstSection ? "show" : "")"
                                             aria-labelledby="heading-@sectionItem.Id" data-bs-parent="#questionsAccordion">
                                            <div class="accordion-body">
                                                @if (sectionItem.Questions != null && sectionItem.Questions.Any())
                                                {
                                                    var questionNumber = 1;

                                                    @foreach (var question in sectionItem.Questions.OrderBy(q => q.DisplayOrder))
                                                    {
                                                        <div class="mb-3">
                                                            <label class="form-label">@questionNumber. @question.QuestionText</label>

                                                            <input type="hidden" name="Answers[@answerIndex].QuestionId" value="@question.Id" />

                                                            @{
                                                                var existingAnswer = Model.Answers?.FirstOrDefault(a => a.QuestionId == question.Id);
                                                                var answerText = existingAnswer?.AnswerText ?? "";
                                                            }

                                                            <textarea name="Answers[@answerIndex].AnswerText" class="form-control" rows="3">@answerText</textarea>

                                                            @{
                                                                questionNumber++;
                                                                answerIndex++;
                                                            }
                                                        </div>
                                                    }
                                                }
                                                else
                                                {
                                                    <div class="alert alert-info">
                                                        Brak pytań w tej sekcji.
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>

                                    isFirstSection = false;
                                }
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    Brak pytań dostępnych dla tego typu kapsuły.
                                </div>
                            }
                        </div>

                    }

                    <!-- Treść listu -->
                    @if (!string.IsNullOrEmpty(Model.MessageContent))
                    {
                        <div class="mb-3">
                            <label asp-for="MessageContent" class="form-label text-center w-100">Treść listu:</label>
                            <textarea asp-for="MessageContent" class="summernote">@Model?.MessageContent</textarea>
                        </div>
                    }

                    <!-- Załączone pliki -->
                    @if (Model.UploadedImages != null && Model.UploadedImages.Any())
                    {
                        @if (Model?.UploadedImages != null && Model.UploadedImages.Any())
                        {
                            <div class="mt-4">
                                <h5>Dodane zdjęcia:</h5>
                                <div class="row">
                                    @foreach (var image in Model.UploadedImages)
                                    {
                                        <div class="col-md-4 mb-3">
                                            <div class="card image-card" style="position: relative;">
                                                <a asp-controller="TimeCapsule" asp-action="DeleteImage"
                                                   asp-route-imageIndex="@Model.UploadedImages.IndexOf(image)"
                                                   asp-route-returnStep="Step8"
                                                   class="btn btn-danger btn-sm delete-image-button">
                                                    <i class="bi bi-x"></i>
                                                </a>
                                                <img src="data:@image.ContentType;base64,@image.Base64Content" class="card-img-top" alt="@image.FileName">
                                                <div class="card-body">
                                                    <p class="card-text small text-truncate">@image.FileName</p>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }

                        <!-- Sekcja dodawania linków -->
                        <div id="linkSection" class="mt-4">
                            <label for="linkInput-0" class="form-label">Dodaj link:</label>
                            <div id="linkInputsContainer">
                                @if (Model?.Links != null && Model.Links.Any())
                                {
                                    @for (int i = 0; i < Model.Links.Count; i++)
                                    {
                                        <div class="input-group mb-3" id="linkGroup-@i">
                                            <input type="url" class="form-control" placeholder="https://przykladowy-link.com"
                                                   id="linkInput-@i" name="Links[@i]" value="@Model.Links[i]" aria-label="Link do zasobu">
                                            @if (i > 0)
                                            {
                                                <button class="btn btn-outline-danger" type="button" onclick="removeLinkInput(@i)">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            }
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="input-group mb-3" id="linkGroup-0">
                                        <input type="url" class="form-control" placeholder="https://przykladowy-link.com"
                                               id="linkInput-0" name="Links[0]" aria-label="Link do zasobu">
                                    </div>
                                }
                            </div>
                            <button type="button" class="btn btn-outline-secondary mt-2" id="addLinkBtn">
                                <i class="bi bi-plus-lg"></i>
                            </button>
                        </div>
                    }

                    <!-- Data otwarcia -->
                    <div class="card mb-4">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Data otwarcia</h5>
                            <a asp-controller="TimeCapsule" asp-action="Step7" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-pencil"></i> Edytuj
                            </a>
                        </div>
                        <div class="card-body">
                            <div class="text-center">
                                <h5>@Model.OpeningDate.ToString("dd/MM/yyyy HH:mm")</h5>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-5">
                        <a asp-controller="TimeCapsule" asp-action="Step7" class="btn btn-secondary">Wstecz</a>
                        <button type="submit" class="btn btn-success">Dalej</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
