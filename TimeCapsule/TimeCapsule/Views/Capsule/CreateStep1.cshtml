@using TimeCapsule.Models.Dto
@using TimeCapsule.Models.DatabaseModels
@model CreateCapsuleDto

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <form asp-controller="TimeCapsule" asp-action="SaveStep1" method="post">
                <div class="text-center">
                    <h1 class="display-6 mb-3">Krok 1 z 9: Wybierz typ kapsuły</h1>

                    <p class="lead mb-3">
                        Zdecyduj, jaką kapsułę chcesz stworzyć:
                    </p>
                </div>

                <div class="row justify-content-center mb-4">
                    <div class="col-md-4 text-center mb-3">
                        <input type="radio" class="btn-check" name="Type" id="typeIndividual" autocomplete="off"
                               value="@CapsuleType.Indywidualna" @(Model.Type == CapsuleType.Indywidualna ? "checked" : "")>
                        <label for="typeIndividual"
                               class="btn btn-outline-secondary rounded-circle d-flex flex-column align-items-center justify-content-center mx-auto"
                               style="width: 120px; height: 120px;">
                            <i class="bi bi-person" style="font-size: 2.5rem;"></i>
                        </label>
                        <div class="mt-3">
                            <h4><strong>Indywidualna</strong></h4>
                            <small class="text-muted">Tylko Ty masz do niej dostęp. Po otwarciu możesz zdecydować, czy chcesz ją udostępnić innym.</small>
                        </div>
                    </div>

                    <div class="col-md-4 text-center mb-3">
                        <input type="radio" class="btn-check" name="Type" id="typePair" autocomplete="off"
                               value="@CapsuleType.Parna" @(Model.Type == CapsuleType.Parna ? "checked" : "")>
                        <label for="typePair"
                               class="btn btn-outline-secondary rounded-circle d-flex flex-column align-items-center justify-content-center mx-auto"
                               style="width: 120px; height: 120px;">
                            <i class="bi bi-people" style="font-size: 2.5rem;"></i>
                        </label>
                        <div class="mt-3">
                            <h4><strong>Dla kogoś</strong></h4>
                            <small class="text-muted">Zrób niespodziankę bliskiej osobie i podaruj jej kapsułę. Oboje będziecie mieć do niej dostęp.</small>
                        </div>
                    </div>

                    <div class="col-md-4 text-center mb-3">
                        <input type="radio" class="btn-check" name="Type" id="typeGroup" autocomplete="off"
                               value="@CapsuleType.Grupowa" @(Model.Type == CapsuleType.Grupowa ? "checked" : "")>
                        <label for="typeGroup"
                               class="btn btn-outline-secondary rounded-circle d-flex flex-column align-items-center justify-content-center mx-auto"
                               style="width: 120px; height: 120px;">
                            <i class="bi bi-collection" style="font-size: 2.5rem;"></i>
                        </label>
                        <div class="mt-3">
                            <h4><strong>Grupowa</strong></h4>
                            <small class="text-muted">Wspólna kapsuła dla kilku osób. Wszyscy będziecie mieć do niej dostęp.</small>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-5">
                    <a asp-controller="TimeCapsule" asp-action="Index" class="btn btn-secondary">Wstecz</a>
                    <button type="submit" class="btn btn-success">Dalej</button>
                </div>
            </form>
        </div>
    </div>
</div>